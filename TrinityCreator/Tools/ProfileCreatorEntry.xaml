<UserControl x:Class="TrinityCreator.Tools.ProfileCreatorEntry"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TrinityCreator.Tools"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="490">
    <WrapPanel Orientation="Horizontal">
        <TextBox Text="{Binding AppKey}" IsEnabled="False" Width="170" Margin="5" ToolTip="AppKey - This is the identifier used in TrinityCreator's code."/>
        <TextBox Text="{Binding SqlKey}" IsEnabled="{Binding IsIncluded}"  Width="170" Margin="5" ToolTip="SqlKey - This is the corresponding column name in the emulator you want to create this profile for."/>
        <TextBox Text="{Binding TableName}" Width="100" Margin="5" ToolTip="Table Name - Use %t for dynamic table names (eg. creature_loot_template should be %t_loot_template"/>
        <CheckBox IsChecked="{Binding IsIncluded}" VerticalAlignment="Center" ToolTip="Uncheck to ignore this AppKey when generating an sql query."/>
    </WrapPanel>
</UserControl>
